<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006A4E"
    tools:context=".HistoryFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="910dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/androidlarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Spinner
            android:id="@+id/yeardorpdownbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_border"/>



        <Spinner
            android:id="@+id/Monthdorpdownbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_border"/>

        <Spinner
            android:id="@+id/datedorpdownbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_border"/>


        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:ems="10"
            android:padding="15dp"
            android:layout_marginHorizontal="10sp"
            android:hint="Select Time"
            android:textColor="@color/black"
            android:background="@drawable/background_border"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/button1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Get Data"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="2dp"
            app:rippleColor="#33AAAAAA"
            android:backgroundTint="#7EFFFFFF"
            android:background="@drawable/custome_button"
            />

        <Button
            android:id="@+id/s_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="2dp"
            android:layout_marginLeft="20dp"
            app:rippleColor="#33AAAAAA"
            android:backgroundTint="#7EFFFFFF"
            android:background="@drawable/custome_button"
            /></LinearLayout>


        <LinearLayout
            android:id="@+id/my_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:background="@drawable/table_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/dateoutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/timeoutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Temperature :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/temperatureoutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Humidity :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/Humidityoutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Wind_Speed :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/windoutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Noise level :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/Noise_leveloutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="City :"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/cityoutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clearbutton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="2dp"
                android:layout_marginLeft="150dp"
                android:textAllCaps="false"
                app:rippleColor="#33AAAAAA"
                android:backgroundTint="#7EFFFFFF"
                android:background="@drawable/custome_button"
                />
            <Button
                android:id="@+id/ssbutton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ss"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textAllCaps="false"
                app:cornerRadius="2dp"
                android:layout_marginLeft="20dp"
                app:rippleColor="#33AAAAAA"
                android:backgroundTint="#7EFFFFFF"
                android:background="@drawable/custome_button"
                />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>

